<script type="text/javascript">

    $(document).one("onload.dms",function(event,container){
    	new Datatable().initPagination({
			src : "userList",
			container:container,
			url : dmsCommon.getDmsPath()["demo"] + "/demoUsers",
			rowID : "USER_ID",
			detailView : true, //当需要显示明细时，打开此开关，否则不需要写
			sortName : "USER_NAME", //当需要默认排序时写，否则不写，默认情况下不写，sortOrder同样
			sortOrder : "asc",
			isQueryFirst:false,
			mergeTotal:{
				megerCellNumber:5,
				megerCellName:"合计"
			},
			//当需要开启显示明细时才实现，否则不实现
			detailFormatter : function(index, row, element) {
				return row.NAME;
			},
			columns : [ 
			    {field : "USER_ID",title : "操作",inputField:"userId",inputHiddenFormat : {}, operateFormat : [
                       {type:"edit",url:"demo/editUser.html",openWidth:"modal-lg",doubleClick:true,isShow:function(value, row, index){
                    	   return true;
                       },attr:'data-validateUrl="" data-validateMethod="" data-validateModel=""'}, //默认不支持双击操作
                       {type:"edit",title:"修改2",url:"demo/editUser2.html",openType:"jump",isShow:function(value, row, index){
                    	   return true;
                       }},
                       {type:"detail",url:"demo/editUser2.html",openType:"jump",isShow:function(value, row, index){
                    	   return true;
                       }},//打开方式默认弹出:open
                       {type:"del",url:"/demoUsers/{[USER_ID]}",model:"demo",callBack:function(response){
                    	   $("#userList",container).dmsTable().refreshTableWithForm();
                       },isShow:function(value, row, index){
                    	   if(row.SEX=="10021001"){
                    		   return true;
                    	   }else{
                    		   return false;
                    	   }
                       },disableHidden:false}, //disableHidden：用来控制对于disabled 的按钮是否需要隐藏,默认不隐藏，如果需要隐藏，请设置为true
                       {type:"edit",url:"demo/editUser4.html",openType:"jump",title:"结案",operateIcon:'<i class="glyphicon glyphicon-lg glyphicon-remove"></i>'}
                   ]
                },  
			    {field : "USER_NAME",title : "用户名2",sortable : false, maxLengthFormat : {length:10}},
				{field : "NAME",title : "姓名",inputField:"name",inputHiddenFormat : {hiddenField:"AGE"}}, 
				{field : "AGE",title : "年龄",numberFormat : {}},
				{field : "BIRTHDAY",title : "出生日期",dateFormat : {}}, 
				{field : "SALARY",title : "薪水",inputHiddenFormat : {},numberFormat : {decimal:2}}, 
				{field : "AGE_PERCENT",title : "年龄/薪水",inputHiddenFormat : {},numberFormat : {decimal:4,numberType:"percent"}}, 
				{field : "ENTRY_TIME",title : "工作开始时间",dateFormat : {format:"YYYY-MM-DD HH:mm:ss"},isVisible:function(column){
					return false;
				}}, 
				{field : "SEX",title : "性别",inputHiddenFormat : {},codeFormat : {type:"dict",codeType:"1002"}} 
			],
			onLoadSuccess : function() {
				$("#userList",container).dmsTable().bootstrapTable('resetView');
			}
		});
    	
    	
    	//绑定onchange 事件
		$("[name='isCheck']",container).bindChange(function(obj){
			var isChecked = $(obj).is(':checked');
			
		});
    	
    	//绑定查询按钮回调
		$("a[data-onclickEvent='true']",container).on("dms.click",function(event){
// 			console.log("into callBack");
		});
    	
		//绑定onchange 事件
		$("[name='isCheckRadio']",container).bindChange(function(obj){
// 			console.log("into callBack");
		});
		
		//动态修改表格中对应单元格的数据
		$("a[data-onclickEvent1='true']",container).on("dms.click",function(event){
			$("#userList",container).dmsTable().updateRowByIndex(0,{USER_NAME:"张宪超"});
		});
    	
    });

</script>
